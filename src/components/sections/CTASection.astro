<section class="relative overflow-hidden" style="background-color: #003946;">
  <div class="w-full" style="height: 60px; background-color: #003946;"></div>

  <div class="relative group">
    <div class="relative w-full" style="height: 600px;">
      <img
        src="/images/image26.png"
        alt="Modern living room with large windows"
        class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
      />
      <div class="absolute inset-0 transition-all duration-700" style="background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.6) 100%);"></div>

      <div class="absolute inset-0 flex flex-col items-center justify-center text-center text-white px-4">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-normal mb-16 leading-tight max-w-5xl mx-auto tracking-wide transition-all duration-700 group-hover:scale-105 group-hover:-translate-y-2" style="font-family: 'SF Pro', 'Inter', sans-serif; color: #FFFFFF;">
          Explore the Windows That Mirror You!
        </h2>
        <button class="glass border-2 border-white text-white px-12 py-5 text-lg tracking-wide hover:bg-white hover:text-[#003946] transition-all duration-500 cursor-pointer hover:scale-125 hover:shadow-2xl rounded-xl font-bold group-hover:animate-pulse">
          Connect with Design Experts
        </button>
      </div>
    </div>
  </div>

  <div class="w-full" style="height: 60px; background-color: #003946;"></div>
</section>
