<section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('/images/home.png');">
  </div>
  
  <div class="relative z-10 container-custom text-center text-white px-4">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-normal mb-4 leading-tight tracking-normal">
      Imagine <span class="font-bold">Windows.</span> Not <span class="font-bold">Walls.</span>
    </h1>
    <p class="text-sm md:text-base lg:text-lg mb-8 max-w-2xl mx-auto leading-relaxed font-light">
      Luxury aluminium windows and doors designed to bring in light, views and lasting strength.
    </p>
    <button class="bg-white/10 backdrop-blur-sm border border-white/30 text-white hover:bg-white/20 transition-all duration-300 rounded text-sm md:text-base px-6 py-2.5 font-normal">
      Book a Window Consultation
    </button>
  </div>
  
  <div class="absolute bottom-6 left-0 right-0 flex lg:hidden justify-center gap-2 z-20">
    <button class="w-2 h-2 rounded-full bg-white" aria-label="Slide 1"></button>
    <button class="w-2 h-2 rounded-full bg-white/40" aria-label="Slide 2"></button>
    <button class="w-2 h-2 rounded-full bg-white/40" aria-label="Slide 3"></button>
    <button class="w-2 h-2 rounded-full bg-white/40" aria-label="Slide 4"></button>
  </div>
</section>
